<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_food_img_food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="14dp"
        android:background="@android:drawable/alert_light_frame"
        app:srcCompat="@drawable/table" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="114dp"
        android:layout_alignTop="@+id/item_food_img_food"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:layout_toEndOf="@+id/item_food_img_food"
        android:layout_toRightOf="@+id/item_food_img_food"
        android:orientation="vertical"
        android:id="@+id/linearLayout">

        <TextView
            android:id="@+id/item_menu_txt_name_food"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nước chanh"
            android:textColor="@android:color/background_dark"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/item_menu_txt_price_food"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giá: 8000đ"
            android:textColor="@android:color/background_dark"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_menu_txt_number_food"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="Số lượng: 800"
                android:textColor="@android:color/background_dark"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/item_food_btn_plus"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="@null"
                app:srcCompat="@drawable/plus" />

            <ImageButton
                android:id="@+id/item_food_btn_minus"
                android:layout_width="42dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/linearLayout"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="25dp"
                android:layout_marginEnd="103dp"
                android:layout_marginRight="103dp"
                android:layout_weight="0"
                android:background="@null"
                app:srcCompat="@drawable/minus" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
